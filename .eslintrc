{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "mocha": true
  },
  "rules": {
    "arrow-parens": [2, "as-needed"],
    "comma-dangle": [2, "never"],
    "max-len": [2, 120, 4],
    "no-confusing-arrow": 0,
    "no-console": 0,
    "no-underscore-dangle": 0,

    "import/prefer-default-export": 0,

    "react/jsx-filename-extension": 0,
    "react/jsx-space-before-closing": [1, "never"]
  }
}
